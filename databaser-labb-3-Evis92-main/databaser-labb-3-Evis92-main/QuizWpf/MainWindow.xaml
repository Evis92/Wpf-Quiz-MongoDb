<Window
    x:Class="QuizWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuizWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:QuizWpf.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Add new Questions">
                <views:QuestionView />
            </TabItem>
            <TabItem Header="Add new Quizzes">
                <views:QuizView />
            </TabItem>
            <TabItem Header="Build new Quizzes">
                <views:BuildQuizView />
            </TabItem>
            <TabItem Header="Add new Category">
                <views:CategoryView />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
